<%- include('header'); -%>

<h1 class="box" id="heading"><%= heading %></h1>
<div class="box">
    <% for(var i=0; i<list.length; i++){ %>
        <form action="/delete" method="post">
            <div class="item">
            <input type="checkbox" name="checkbox" value="<%= list[i]._id %>" onchange="this.form.submit()">
            <p><%= list[i].content %></p>
            <input type="hidden" name="listName" value="<%= heading %>" ></input>
            </div>
        </form>
    <% } %>
    <div class="item">
        <form action="/" method="post">
            <input type="text" name="newitem" autocomplete="off" placeholder="Add New Item">
            <button type="submit" name="button" value="<%= heading %>">+</button>
        </form>
    </div>
</div>
    
<%- include('footer'); -%>